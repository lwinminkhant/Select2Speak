<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    >
    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:contentDescription="dismiss" />
    <LinearLayout
        android:id="@+id/ll_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/round_cornor_background"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:scrollbars="vertical"
            >

            <TextView
                android:id="@+id/tv_speak"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/round_cornor_top_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>
        </ScrollView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="10dp">
            <ImageView
                android:id="@+id/btn_close"
                android:src="@drawable/close_btn"
                android:background="@drawable/round_bottom_background"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                android:padding="5dp"
                android:layout_margin="5dp"

                android:contentDescription="close"/>
            <ImageView
                android:id="@+id/btn_repeat"
                android:src="@drawable/repeat_btn"
                android:background="@drawable/round_bottom_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"


                android:padding="5dp"
                android:layout_margin="5dp"

                android:contentDescription="repeat"/>
            <ImageView
                android:id="@+id/btn_stop"
                android:src="@drawable/stop_btn"
                android:layout_width="0dp"
                android:background="@drawable/round_bottom_background"
                android:layout_height="wrap_content"
                android:layout_weight="1"


                android:padding="5dp"
                android:layout_margin="5dp"
                android:contentDescription="stop"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>